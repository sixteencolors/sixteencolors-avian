doctype html
html(lang="en")
    head

        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui")

        title SixteenColors Ansi &amp; Ascii Artwork Archive

        block style

            style
                include:less sixteencolors.style.less

    body

        v-app(dark)

            #header

                v-toolbar(dark extended fluid).black

                    img(src="/assets/images/sixteencolors-logo-small.png")
                    
                    v-spacer
                    
                    v-toolbar-items
                        v-btn(flat href="/artpacks") Artpacks
                        v-btn(flat href="/artists") Artists
                        v-btn(flat href="/groups") Groups

            block view

            #footer

                v-footer(dark float).black
                    
                    v-spacer

                    div &copy; #{ new Date().getFullYear() }


        block component

            script(src="/sixteencolors.component.bundle.js")
